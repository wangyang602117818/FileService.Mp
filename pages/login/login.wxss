.login_form {
  width: 100%;
}

.logo {
  height: 35px;
  width: 70%;
  margin-top: 30px;
  margin-left: 0px;
}

.form_line {
  width: 90%;
  display: flex;
  margin-top: 30px;
}

.form_line input {
  width: 100%;
  padding: 2px 5px;
  color: #3d4145;
  border-bottom: 1px solid #ccc;
}

.button_login {
  width: 100%;
  height: 40px;
  line-height: 40px;
  background-color: #eb8c00;
  color: #fff;
  margin-top: 10px;
  border:0;
}

.button_login_hover {
  background-color: #efa333;
}
