.login_form {
  width: 100%;
}

.logo {
  height: 80rpx;
  width: 70%;
  margin-top: 60rpx;
  margin-left: 0rpx;
}

.form_line {
  width: 90%;
  display: flex;
  margin-top: 80rpx;
}

.form_line input {
  width: 100%;
  padding: 4rpx 10rpx;
  color: #3d4145;
  border-bottom: 1rpx solid #ccc;
}

.button_login {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #eb8c00;
  color: #fff;
  margin-top: 45rpx;
  border:0;
}

