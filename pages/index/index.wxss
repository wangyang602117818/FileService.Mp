/**index.wxss**/

.search_add {
  position: absolute;
  right: 0;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 200rpx;
  margin-top: 135rpx;
  background-color: #fff;
  border: 1px solid #d3d3d4;
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
}

.search_add view:last-child {
  border-bottom: 0;
}

.search_add view {
  flex: 1;
  border-bottom: 1px solid #e2e2e3;
  display: flex;
  align-items: center;
  justify-content: center;
}

.funs_text {
  margin-left: 8rpx;
}

.search_order {
  position: absolute;
  height: 200rpx;
  right: 55rpx;
  margin-top: 135rpx;
  background-color: #fff;
  border: 1px solid #d3d3d4;
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.search_order view {
  flex: 1;
  border-bottom: 1px solid #e2e2e3;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.search_order view:last-child {
  border-bottom: 0;
}

.search_order .current {
  color: #f60;
}

.bottom_funs {
  border-top: 1px solid #d3d3d3;
  position: fixed;
  bottom: 0px;
  height: 95rpx;
  background-color: #f7f7fa;
  display: flex;
  width: 100%;
}

.bottom_funs view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.bottom_funs view text {
  font-size: 22rpx;
  color: #5f5d5d;
  margin-top: 4rpx;
}

.bottom_funs view image {
  width: 45rpx;
  height: 45rpx;
}

.data_thumb_container {
  margin-top: 10rpx;
  padding-bottom: 20rpx;
}

.data_thumb_line {
  display: flex;
  margin-top: 20rpx;
  justify-content: flex-start;
}
.data_thumb_line .selected{
  border:1px solid #f60;
}
.data_thumb_item {
  border: 1px solid #e0e0e0;
  height: 220rpx;
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  position: relative;
}

.data_thumb_item:not(:first-child) {
  margin-left: 20rpx;
}

.data_thumb_item .data_thumb_image {
  flex: 1;
  width: 100%;
  background-position: center;
  background-repeat: no-repeat;
  overflow: hidden;
}

.data_thumb_item .data_thumb_meta {
  width: 100%;
  font-size: 25rpx;
  height: 35rpx;
  line-height: 25rpx;
  text-align: center;
  align-items: center;
}

.data_thumb_item .icon-m-detail {
  display: inline-flex;
  font-size: 28rpx;
  height: 25rpx;
  width: 35rpx;
  position: absolute;
  color: #5f5d5d;
  left:0;
  top: 0;
  align-items: center;
  justify-content: center;
}
